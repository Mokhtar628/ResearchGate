@model IEnumerable<ResearchGate.Models.Author>

@{
    ViewBag.Title = "OUT";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <link href="~/Content/Search/Searchoutput.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <title>Search Tap</title>
</head>
<body>
    <div class="container">
        @if (Model.Count() == 0)
        {
            <p colspan="3" style="color:red">
                No Match Document
            </p>
        }
        else
        {
            foreach (var item in Model)
            {
            <div class="card mb-3" style="max-width: 500px;">
                <div class="row g-0">
                    <div class="col-md-8">
                        <div class="info">
                            <h4 class="card-title">
                                @item.Fname @item.Mname @item.Lname
                            </h4>
                            <p class="card-text">@item.university</p>
                            @Html.ActionLink("VisitProfile", "VisitProfile", "Authors", new { id = item.ID } , new {@class="btn btn-default"})
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="photo">
                            <img src="@Url.Content(item.ProfileImage)" class="" alt="..." style="height:100px;width:100px;">
                        </div>
                    </div>

                    
                </div>
            </div>

            }
        }
    </div>
</body>



