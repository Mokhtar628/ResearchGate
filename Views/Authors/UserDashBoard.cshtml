@model IEnumerable<ResearchGate.Models.Artical>

@{
    ViewBag.Title = "UserDashBoard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/Home/home.css" rel="stylesheet" type="text/css" />


@foreach (var item in Model)
 {
<div class="article-div" style="">
    @Html.ActionLink(@item.title, "ShowArticalDetails", "AddArticals", new { id = item.ID }, htmlAttributes: null)
    <br />
    <button class="article-btn">Article</button>
    <br />
    <span style="margin-top:5px">
        @foreach (var author in @item.Authors)
        {

            <img src="@Url.Content(@author.ProfileImage.ToString())" style="border-radius: 25px;max-height:18px" />
            <a href="/Authors/VisitProfile/@author.ID"><span>@author.Fname @author.Lname</span></a>

        }
    </span>
    
    <button class="article-btn" style="float:right">@Html.ActionLink("Add Comment", "Comment", "AddArticals", new { id = item.ID }, htmlAttributes: null)</button>
    
</div>
}



